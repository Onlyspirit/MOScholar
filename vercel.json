{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/node",
      "config": {
        "command": "ng build --prod"
      }
    },
    {
      "src": "dist/MOScholar/**/*",
      "use": "@vercel/static"
    }
  ],
  "outputDirectory": "dist/MOScholar",
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}